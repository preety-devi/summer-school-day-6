{
  "manifest_version": 3,
  "name": "Check Weather",
  "version": "1.0",
  "description": "Displays current weather based on user's location",
  "permissions": ["geolocation"],
  "host_permissions": [
    "https://api.openweathermap.org/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon-16x16.png",
      "48": "favicon-48x48.png",
      "128": "favicon-128x128.png"
    }
  }
}
